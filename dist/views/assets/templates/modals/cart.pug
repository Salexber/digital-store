// Cart Modal
#cart.cart-wrap.hide
  .container
    .row
      .cart
        .cart-content
          .modal-content
            .modal-content__header
              h4.small-title Корзина
              span#cartClose.cart-close
                i.material-icons close
            #modalList.modal-content__items
            .modal-content__info
              .modal-content__counter
                span Всего товаров в корзине
                span
                  b#modalCounter 1
              .modal-content__pay
                span
                  b Сумма к оплате
                span
                  b#totalPrice 139.89 ₽
            .modal-content__purchase
              button#makePay.purchase-btn.waves-effect.btn Перейти к оплате
// Cart Modal END
