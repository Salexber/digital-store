include ./assets/head.pug
body.has-fixed-sidenav
    include ./assets/templates/header.pug
    main.admin-main
        .container
            .row
                .col.s12
                    h2 Редактирование категорий
                .col.s12
                    .card
                        .card-content
                            .input-field
                                select
                                    option(value="" disabled selected)
                                        | Выберите категорию
                                    option(value="1" data-icon="../img/service-icons/origin.svg") Origin
                                    option(value="2" data-icon="../img/service-icons/steam.svg") Steam
                                label Редактирование
                            .category-add
                                h5 Добавить категорию
                                .row
                                    form(action="/" method="POST")
                                        .input-field.col.l6.s12
                                            input(id="title" name="title" type="text" data-length="20" required)
                                            label(for="title") Название категории
                                        .file-field.input-field.col.l6.s12
                                            .btn.orange
                                                span Иконка
                                                input(type="file" name="img" required)
                                            .file-path-wrapper
                                                input(type="text" class="file-path" placeholder="Загрузите иконку в формате .svg")
                                        .input-field.col.l6.s12
                                            textarea(class="materialize-textarea" type="text" id="type" name="type" required)
                                            label(for="type") Тип аккаунтов
                                        .input-field.col.l6.s12
                                            input(type="text" id="format" name="format" required)
                                            label(for="format") Формат аккаунтов
                                        .col.s12
                                            button(type="submit" class="btn") Добавить категорию
                                            button(class="orange btn hide" style="margin-left:5px;") Редактировать
                            .divider
                            .category-delete
                                h5 Удалить категорию
                                .row
                                    form(action="/")
                                        .input-field.col.s12
                                            select
                                                option(value="" disabled selected)
                                                    | Выберите категорию для удаления
                                                option(value="1" data-icon="../img/service-icons/origin.svg") Origin
                                                option(value="2" data-icon="../img/service-icons/steam.svg") Steam
                                            label Удаление
                                        .col.s6
                                            button(type="submit" class="btn red") Удалить             

                                   
    include ./assets/templates/footer.pug
    include ./assets/scripts.pug